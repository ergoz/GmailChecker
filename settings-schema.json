{
    "EmailAccount": {
        "type": "entry",
        "description": "Your email account (ex: exemple@gmail.com)",
        "default": ""
    },
    
    "Password": {
        "type": "entry",
        "description": "Your password (will be stored in Gnome Keyring)",
        "default": ""
    },
    
    "SetEmailAndPassword": {
        "type": "button",
        "description": "Set the email and the password",
        "callback": "on_email_and_password_changed"
    },
    
    "StorePasswordInKeyring": {
        "type": "checkbox",
        "description": "Store the password in Gnome Keyring instead of the settings",
        "default": false
    },
    
    "DisplayedEmailsNumber": {
        "type": "scale",
        "description": "The max number of emails displayed in the popup menu",
        "default": 4,
        "min": 1,
        "max": 10,
        "step": 1
    },
 
    "CheckFrequency": {
        "type": "scale",
        "description": "The mailbox checking frequency (in minutes)",
        "default": 5,
        "min": 1,
        "max": 60,
        "step": 1
    },
    
    "DisplayNotifications": {
        "type": "checkbox",
        "description": "Display notifications in case of troubles",
        "default": true
    },
    
    "OpenGmailCommand": {
        "type": "entry",
        "description": "Open Gmail command",
        "default": "xdg-open https://mail.google.com"
    }
}

